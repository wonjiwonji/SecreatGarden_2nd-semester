<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green2"
        app:contentInsetStart="10dp">

        <ImageButton
            android:id="@+id/fee_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/green2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="요금안내"
            android:textColor="@color/backgroundgray"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
            android:textSize="23dp"
            android:textStyle="normal" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="#00000000"
                    app:srcCompat="@drawable/leaf" />

                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/titleunderline"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/bmjua"
                    android:inputType="textPersonName"
                    android:text="요금안내"
                    android:textColor="@color/leafgreen"
                    android:textSize="22dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/fee_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_gravity="bottom"
                    android:background="#00000000"
                    app:srcCompat="@drawable/leaf" />

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/titleunderline"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/bmjua"
                    android:inputType="textPersonName"
                    android:text="동절기 요금안내"
                    android:textColor="@color/leafgreen"
                    android:textSize="22dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/fee_img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TextView"
                android:textColor="@color/red"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="#00000000"
                    app:srcCompat="@drawable/leaf" />

                <EditText
                    android:id="@+id/editTextTextPersonName3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/titleunderline"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/bmjua"
                    android:inputType="textPersonName"
                    android:text="무료입장"
                    android:textColor="@color/leafgreen"
                    android:textSize="22dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="#00000000"
                    app:srcCompat="@drawable/leaf" />

                <EditText
                    android:id="@+id/editTextTextPersonName4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/titleunderline"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/bmjua"
                    android:inputType="textPersonName"
                    android:text="할인입장"
                    android:textColor="@color/leafgreen"
                    android:textSize="22dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text3"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="#00000000"
                    app:srcCompat="@drawable/leaf" />

                <EditText
                    android:id="@+id/editTextTextPersonName5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/titleunderline"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/bmjua"
                    android:inputType="textPersonName"
                    android:text="기타"
                    android:textColor="@color/leafgreen"
                    android:textSize="22dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text4"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:lineSpacingExtra="5dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.Toolbar

                    android:id="@+id/toolbar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundgreen">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/imageButton13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            app:srcCompat="@drawable/guide_fee_img3" />

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="일반단체 예약안내 및 \n교육프로그램 예약안내"
                            android:textColor="@color/white"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="031-724-1602"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>