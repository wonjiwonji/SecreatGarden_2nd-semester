<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green2"
        app:contentInsetStart="10dp">

        <ImageButton
            android:id="@+id/street_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/green2"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/GetDirections"
            android:textColor="@color/backgroundgray"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
            android:textSize="23dp"
            android:textStyle="normal" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/street_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/leaf" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/titleunderline"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/bmjua"
            android:inputType="textPersonName"
            android:text="@string/Whenusingpublictransportation"
            android:textColor="@color/leafgreen"
            android:textSize="22dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/street_img2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

</LinearLayout>