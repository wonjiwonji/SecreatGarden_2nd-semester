<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/course"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/thingreen"
            app:contentInsetStart="0dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/thingreen"
                app:srcCompat="@drawable/left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@android:dimen/app_icon_size"
                android:textStyle="normal"
                android:text="계절 코스"
                android:textColor="@color/backgroundgray"
                android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/nevi_icon"
                android:layout_marginLeft="150dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/thingreen"
                app:srcCompat="@drawable/right" />


        </androidx.appcompat.widget.Toolbar>

        <!--        <ImageView-->
        <!--            android:id="@+id/child_image"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="100dp"-->
        <!--            android:src="@drawable/shingu" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
    <include layout="@layout/course_nevi"/>

</androidx.drawerlayout.widget.DrawerLayout>

