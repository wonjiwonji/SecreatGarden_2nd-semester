<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/h_qr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/qr" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="188dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/h_guide"
                    android:layout_width="@dimen/homebtnsize"
                    android:layout_height="@dimen/homebtnsize"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="12.5dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/home_guide" />

                <ImageButton
                    android:id="@+id/h_weathercourse"
                    android:layout_width="@dimen/homebtnsize"
                    android:layout_height="@dimen/homebtnsize"
                    android:layout_marginLeft="12.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="12.5dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/home_weather" />

                <ImageButton
                    android:id="@+id/h_course"
                    android:layout_width="@dimen/homebtnsize"
                    android:layout_height="@dimen/homebtnsize"
                    android:layout_marginLeft="12.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="12.5dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/home_course" />

                <ImageButton
                    android:id="@+id/h_info"
                    android:layout_width="@dimen/homebtnsize"
                    android:layout_height="@dimen/homebtnsize"
                    android:layout_marginLeft="12.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="12.5dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/home_info" />

                <ImageButton
                    android:id="@+id/h_shop"
                    android:layout_width="@dimen/homebtnsize"
                    android:layout_height="@dimen/homebtnsize"
                    android:layout_marginLeft="12.5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/home_shop" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_horizontal"
                    android:text="관람안내"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_horizontal"
                    android:text="계절코스"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_horizontal"
                    android:text="추천코스"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="13dp"
                    android:gravity="center_horizontal"
                    android:text="식물정보"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_horizontal"
                    android:text="가든샵"
                    android:textAlignment="center"
                    android:textColor="@color/textcolor"
                    android:textSize="12dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="이 달의 축제"
                android:textColor="@color/textcolor"
                android:textSize="18dp"
                android:textStyle="normal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="8dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_green">


                </androidx.viewpager2.widget.ViewPager2>

            </FrameLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="오늘의 걸음 수"
                android:textColor="@color/textcolor"
                android:textSize="18dp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:background="@color/bg_green"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stepCountTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="55dp"
                    android:text="오늘의 운동량은 "
                    android:textColor="@color/textcolor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/stepCountView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="0"
                    android:textColor="@color/textcolor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/stepCountTag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="30dp"
                    android:text="보          입니다."
                    android:textColor="@color/textcolor"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>